{
    "name": "VT AutoBoat Development Container v1.0.0",
    "image": "vtautoboat/autoboat_docker_dev_image",
    "initializeCommand": "docker pull vtautoboat/autoboat_docker_dev_image",
    "privileged": true,
    "remoteUser": "",
    "containerUser": "",
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws/,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-python.python",
                "ms-python.vscodylance",
                "magicstack.magicpython",
                "ms-vscode.cpptools",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "ms-iot.vscode-ros",
                "smilerobotics.urdf",
                "yzhang.markdown-all-in-one",
                "charliermarsh.ruff",
                "njpwerner.autodocstring",
                "tamasfe.even-better-toml",
                "davidanson.vscode-markdownlint",
                "rodolphebarbanneau.python-docstring-highlighter",
                "redhat.vscode-xml",
                "redhat.vscode-yaml"
            ]
        }
    },
    "containerEnv": {
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42",
        "DOCKER_RUNTIME_RUN_ARGS": "${localEnv:DOCKER_RUNTIME_RUN_ARGS:}",
        "DOCKER_GPU_RUN_ARGS": "${localEnv:DOCKER_GPU_RUN_ARGS:}"
    },
    "runArgs": [
        "--net=host",
        "-v",
        "/dev:/dev",
        "--env-file=.devcontainer/devcontainer_environment_variables",
        "-v",
        "/var/run/docker.sock:/var/run/docker.sock",
        "${localEnv:DOCKER_RUNTIME_RUN_ARGS:}",
        "${localEnv:DOCKER_GPU_RUN_ARGS:}"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
    ]
}