{
    "name": "VT AutoBoat Development Container v1.1.1",
    "image": "vtautoboat/autoboat_docker_dev_image",
    "initializeCommand": "xhost +localhost; docker pull --platform=linux/amd64 vtautoboat/autoboat_docker_dev_image",
    "postCreateCommand": "bash docker_dev_environment_setup.sh",
    "privileged": true,
    "remoteUser": "",
    "containerUser": "",
    "workspaceFolder": "/home/ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=/home/ws/,type=bind",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-containers",
                "ms-iot.vscode-ros",
                "smilerobotics.urdf",
                "golang.go",
                "ms-vscode.cpptools",
                "twxs.cmake",
                "ms-vscode.cmake-tools",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "magicstack.magicpython",
                "charliermarsh.ruff",
                "rodolphebarbanneau.python-docstring-highlighter",
                "njpwerner.autodocstring",
                "IBM.output-colorizer",
                "ms-vscode.hexeditor",
                "pflannery.vscode-versionlens",
                "yzhang.markdown-all-in-one",
                "davidanson.vscode-markdownlint",
                "tamasfe.even-better-toml",
                "redhat.vscode-xml",
                "redhat.vscode-yaml",
                "mkxml.vscode-filesize"
            ]
        }
    },
    "containerEnv": {
        "ROS_AUTOMATIC_DISCOVERY_RANGE": "LOCALHOST",
        "ROS_DOMAIN_ID": "42",
        "CONTAINER_OWNER_USER_NAME": "${localEnv:USER}",
        "TZ": "${localEnv:TZ:America/New_York}"
    },
    "runArgs": [
        "--net=host",
        "--platform=linux/amd64",
        "-v",
        "/dev:/dev",
        "--env-file=.devcontainer/devcontainer_environment_variables",
        "-v",
        "/var/run/docker.sock:/var/run/docker.sock",
        "${localEnv:DOCKER_GPU_RUN_ARGS:--env}",
        "${localEnv:DOCKER_RUNTIME_RUN_ARGS:IGNORE_THIS=hi}"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached"
    ]
}
